
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1563381013529-1c922c80ac8d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2913&q=80);">
  <div class="container d-flex justify-content-center">
    <h1>All Movies!</h1>
  </div>
</div>



<div class="cards">
  <%@movies.each do |movie|%>

    <%= link_to movie_path(movie) do %>
      <div class="card-trip">
          <div class="card-trip-container d-flex justify-content-center">
            <%= image_tag movie.poster_url%>
          </div>
        <div class="card-trip-infos">
          <div>
            <h2><%=movie.title%> </h2>
            <p><%=movie.overview%> </p>
          </div>
          <%# <h2 class="card-trip-pricing">Â£99.99</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
