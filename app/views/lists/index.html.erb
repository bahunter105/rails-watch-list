<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1563381013529-1c922c80ac8d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2913&q=80);">
  <div class="container d-flex justify-content-center">
    <h1 class="text-center">All of My Lists:</h1>
  </div>
</div>


<div class="cards">
  <%@lists.each do |list|%>
    <%= link_to list_path(list) do %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
      <% else %>
        <%photo = ["https://media.istockphoto.com/photos/saver-to-start-movie-picture-id492365655?b=1&k=20&m=492365655&s=170667a&w=0&h=BqfY1iIKF1XvvoFcvstQ0eYAueQ6Oq2jPNBWxv_1ELY=", "https://images.unsplash.com/photo-1584474345633-cfd33a207dc8?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTN8fHBvcGNvcm58ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60", "https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1712&q=80", "https://media.istockphoto.com/photos/popcorn-horizontal-picture-id182759813?b=1&k=20&m=182759813&s=170667a&w=0&h=g4E0a_09gy8a5oB9SuLKsFU-X0Ut4MFGJ-5VwyIrA8Y=", "https://images.unsplash.com/photo-1533488765986-dfa2a9939acd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1548&q=80", "https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1548&q=80", "https://images.unsplash.com/photo-1485846234645-a62644f84728?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1718&q=80", "https://images.unsplash.com/photo-1585951237318-9ea5e175b891?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"].sample%> %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= photo %>)">
      <% end %>
        <%= list.name %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="container border-top mt-5 pt-2">
  <div class= "row">
    <div class="col-3"></div>
    <div class="col-6 form-floating mb-3 border">
      <h3>Add New List: </h3>
      <%= simple_form_for List.new do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn-flat"%>
      <% end %>
    <div class="col-3"></div>
    </div>
  </div>
</div>
